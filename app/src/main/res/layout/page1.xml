<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="com.jorjin.weker.myapplication.Page2Fragment"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:id="@+id/image2"
        android:layout_below="@+id/customer"
        android:layout_centerInParent="true"
        android:src="@drawable/frontpage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productName"
        android:textSize="22sp"
        android:text="Product Name: Magnet"
        android:layout_below="@+id/workOrder"
        android:layout_alignLeft="@+id/title"
        android:textColor="@color/yellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="26sp"
        android:text="3D Magnetic Analyzer"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/yellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workOrder"
        android:textSize="22sp"
        android:text="Working order: MAT020160900"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:textColor="@color/yellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer"
        android:textSize="22sp"
        android:text="Customer: Optic Pioneer"
        android:layout_below="@+id/productName"
        android:layout_alignLeft="@+id/title"
        android:textColor="@color/yellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engineer"
        android:textSize="22sp"
        android:text="Engineer: Chris Wu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/yellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentProcess"
        android:textSize="22sp"
        android:text="Current Process: "
        android:layout_below="@+id/image2"
        android:layout_alignParentRight="true"
        android:textColor="@color/yellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calibration"
        android:textSize="22sp"
        android:text="1.Calibration"
        android:layout_below="@+id/currentProcess"
        android:layout_alignLeft="@+id/currentProcess"
        android:textColor="@color/yellow" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/measurement"
        android:textSize="22sp"
        android:text="2.Measurement"
        android:layout_below="@+id/calibration"
        android:layout_alignLeft="@+id/calibration"
        android:textColor="@color/yellow" />


</RelativeLayout>
